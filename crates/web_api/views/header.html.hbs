{{#*inline "navlink"}}
  <a class="py-2 px-4 block decoration-orange-400 data-[active]:underline data-[active]:font-bold hover:underline hover:text-orange-500" href="{{href}}" :data-active="url.pathname === '{{href}}'">
    {{text}}
  </a>
{{/inline}}

<nav class="flex items-center justify-center relative" x-data="{ url: new URL(window.location.href) }">
  <span
    class="pointer-events-none text-sm absolute left-2 top-1/2 -translate-y-1/2 opacity-75"
  >
    🏀
    <span class="font-bold">Pointguard</span>
  </span>
  {{> navlink href="/" text="Home"}}
  {{> navlink href="/ongoing" text="Ongoing"}}
  {{> navlink href="/retries" text="Retries"}}
  {{> navlink href="/failed" text="Failed"}}
</nav>
